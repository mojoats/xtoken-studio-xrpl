{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "resolveJsonModule": true
	"baseUrl": ".",
    "paths": {
      "@sdk-core": ["packages/sdk-core/src/index"],
      "@sdk-core/*": ["packages/sdk-core/src/*"]
  },
  "include": ["packages/**/*", "examples/**/*"]
}
